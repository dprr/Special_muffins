<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/civ_item_skeleton_bell"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_iconmonstr_bell_1"
                android:background="@drawable/circle"
                android:padding="8dp"


                android:layout_margin="8dp"



                android:tint="@color/colorPurpleDark"
                />

            <TextView

                android:id="@+id/tv_item_skeleton_title"

                android:textSize="17sp"

                android:layout_marginTop="20dp"
                android:gravity="center_vertical|start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_toEndOf="@+id/civ_item_skeleton_bell"
                android:layout_toRightOf="@+id/civ_item_skeleton_bell"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"

                />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>